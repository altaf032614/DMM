import numpy as np
import matplotlib.pyplot as plt

# Step 1: Read data from files
file1_path = 'time.txt'  # replace with your file path
file2_path = 'temp.txt'  # replace with your file path

# Assuming the files have two columns (x and y)
x_data = np.loadtxt(file1_path)
y_data = np.loadtxt(file2_path)

# Step 2: Plot the data
plt.plot(x_data, y_data, label='Line Graph')
plt.xlabel('X-axis Label')
plt.ylabel('Y-axis Label')
plt.title('Line Graph Example')
plt.legend()
plt.show()
